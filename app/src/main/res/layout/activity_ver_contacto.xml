<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerContactoActivity"
android:background="@color/fondoGray">

    <ImageView
            android:id="@+id/imageView"
            android:layout_height="185dp" android:layout_width="198dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="93dp"
            android:layout_marginEnd="93dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:srcCompat="@android:drawable/ic_menu_mapmode"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:id="@+id/btnBack"
            android:onClick="back2Home"
            android:src="?attr/actionModeCloseDrawable" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="468dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit" android:layout_marginEnd="120dp"
            android:layout_marginStart="25dp"/>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:id="@+id/btnEdit"
            android:onClick="editContact"
            android:src="@android:drawable/ic_menu_edit" android:layout_marginStart="150dp"
            app:layout_constraintStart_toEndOf="@+id/btnBack" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp" android:layout_marginBottom="471dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="30dp"/>
    <TextView
            android:text="@string/name"
            android:textColor="@color/textoPurple"
            android:layout_width="126dp"
            android:layout_height="22dp"
            android:id="@+id/fillName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="163dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="184dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/fillMail" android:layout_marginTop="95dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.37"
            android:textAlignment="center" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="@string/mail"
            android:layout_width="189dp"
            android:layout_height="27dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/fillMail"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/fillName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="168dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/fillPhone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="190dp" app:layout_constraintHorizontal_bias="0.387"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/phone"
            android:layout_width="138dp"
            android:layout_height="25dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/fillPhone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="183dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/fillMail" app:layout_constraintHorizontal_bias="0.372"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/fillPriority"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/Prioridad"
            android:layout_width="24dp"
            android:layout_height="19dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/fillPriority" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="251dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp" android:layout_marginBottom="94dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/fillPhone" app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/indicaPr"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subPri"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="43dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="102dp"
            app:layout_constraintEnd_toStartOf="@+id/fillPriority" android:layout_marginEnd="42dp"
            android:layout_marginTop="213dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="textEnd"/>

</androidx.constraintlayout.widget.ConstraintLayout>